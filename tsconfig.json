{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules"]
}
